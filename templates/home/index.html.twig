{% extends 'base.html.twig' %}

{% block title %}Calendrier ROCT{% endblock %}

{% block body %}
    {% if season %}
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Saison {{ season }}</h1>
            <p class="text-gray-500 mt-1">Calendrier des événements</p>
        </div>

        <form method="GET" action="{{ path('app_home') }}" class="bg-white rounded-xl shadow-sm border border-gray-100 p-5 mb-6">
            <div class="flex flex-col sm:flex-row sm:items-end gap-4">
                {% if categories is not empty %}
                    <div class="flex-1">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Catégories</label>
                        <div class="flex flex-wrap gap-2">
                            {% for category in categories %}
                                <label class="inline-flex items-center gap-1.5 cursor-pointer">
                                    <input type="checkbox" name="categories[]" value="{{ category.id }}"
                                           class="rounded border-gray-300 text-red-600 focus:ring-red-500"
                                           {{ category.id in selectedCategories ? 'checked' }}>
                                    <span class="text-sm text-gray-700">{{ category.code }}</span>
                                </label>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <div>
                    <label for="date_from" class="block text-sm font-medium text-gray-700 mb-2">Du</label>
                    <input type="date" id="date_from" name="date_from" value="{{ dateFrom }}"
                           class="rounded-lg border-gray-300 text-sm focus:ring-blue-500 focus:border-blue-500">
                </div>

                <div>
                    <label for="date_to" class="block text-sm font-medium text-gray-700 mb-2">Au</label>
                    <input type="date" id="date_to" name="date_to" value="{{ dateTo }}"
                           class="rounded-lg border-gray-300 text-sm focus:ring-blue-500 focus:border-blue-500">
                </div>

                <div class="flex gap-2">
                    <button type="submit"
                            class="px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors">
                        Filtrer
                    </button>
                    <div class="relative" id="export-dropdown">
                        <button type="button" onclick="document.getElementById('export-menu').classList.toggle('hidden')"
                                class="px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors inline-flex items-center gap-1">
                            Exporter
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                        </button>
                        <div id="export-menu" class="hidden absolute right-0 mt-1 w-56 bg-white rounded-lg shadow-lg border border-gray-200 z-10 py-1">
                            <a href="{{ path('app_export_pdf', app.request.query.all) }}"
                               class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                                Exporter en PDF
                            </a>
                            <button type="button" onclick="openIcalModal()"
                                    class="flex items-center gap-2 w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                                Lien iCal (Google Agenda)
                            </button>
                        </div>
                    </div>
                    {% if selectedCategories or dateFrom or dateTo %}
                        <a href="{{ path('app_home') }}"
                           class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors">
                            Réinitialiser
                        </a>
                    {% endif %}
                </div>
            </div>
        </form>

        {% if events is not empty %}
            <div class="grid gap-4">
                {% for event in events %}
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-5 hover:shadow-md transition-shadow">
                        <div class="flex flex-col sm:flex-row sm:items-center gap-3">
                            <div class="flex-shrink-0 text-center sm:text-left">
                                <div class="text-sm font-semibold text-gray-400 uppercase">
                                    {{ event.eventDate|date('D') }}
                                </div>
                                <div class="text-2xl font-bold text-gray-800">
                                    {{ event.eventDate|date('d') }}
                                </div>
                                <div class="text-sm text-gray-500">
                                    {{ event.eventDate|date('M Y') }}
                                </div>
                            </div>

                            <div class="hidden sm:block w-px h-12 bg-gray-200"></div>

                            <div class="flex-1 min-w-0">
                                <div class="flex flex-wrap items-center gap-2 mb-1">
                                    <h2 class="text-lg font-semibold text-gray-800">{{ event.name }}</h2>
                                    <span class="inline-block text-xs font-medium text-white px-2.5 py-0.5 rounded-full"
                                          style="background-color: {{ event.type.color }};">
                                        {{ event.type.label }}
                                    </span>
                                    {% for category in event.categories %}
                                        <span class="inline-block text-xs font-medium text-gray-600 bg-gray-100 px-2.5 py-0.5 rounded-full">
                                            {{ category.code }}
                                        </span>
                                    {% endfor %}
                                </div>
                                {% if event.description %}
                                    <p class="text-gray-500 text-sm leading-relaxed">{{ event.description }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-12 text-center">
                <p class="text-gray-400 text-lg">Aucun événement pour cette saison.</p>
            </div>
        {% endif %}
    {% else %}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-12 text-center">
            <p class="text-gray-400 text-lg">Aucune saison en cours.</p>
        </div>
    {% endif %}

    {# iCal modal #}
    <div id="ical-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/40">
        <div class="bg-white rounded-xl shadow-xl max-w-lg w-full mx-4 p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-800">Synchroniser avec Google Agenda</h3>
                <button type="button" onclick="closeIcalModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                </button>
            </div>

            <p class="text-sm text-gray-600 mb-4">
                Copiez ce lien et ajoutez-le dans Google Agenda via
                <strong>Autres agendas (+) &rarr; À partir de l'URL</strong>.
                Les événements se synchroniseront automatiquement.
            </p>

            <div class="flex gap-2">
                <input type="text" id="ical-url" readonly
                       value="{{ url('app_export_ical', app.request.query.all) }}"
                       class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm bg-gray-50 text-gray-700 select-all focus:outline-none focus:ring-2 focus:ring-red-500">
                <button type="button" onclick="copyIcalUrl()"
                        class="px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors whitespace-nowrap">
                    Copier
                </button>
            </div>

            <p id="ical-copied" class="hidden text-sm text-green-600 mt-2">Lien copié !</p>

            <div class="mt-4 pt-4 border-t border-gray-100">
                <a href="{{ url('app_export_ical', app.request.query.all) }}"
                   class="text-sm text-red-600 hover:underline">
                    Télécharger le fichier .ics
                </a>
            </div>
        </div>
    </div>

    <script>
        // Close export dropdown when clicking outside
        document.addEventListener('click', function(e) {
            const dropdown = document.getElementById('export-dropdown');
            const menu = document.getElementById('export-menu');
            if (dropdown && menu && !dropdown.contains(e.target)) {
                menu.classList.add('hidden');
            }
        });

        function openIcalModal() {
            document.getElementById('export-menu').classList.add('hidden');
            document.getElementById('ical-modal').classList.remove('hidden');
        }

        function closeIcalModal() {
            document.getElementById('ical-modal').classList.add('hidden');
            document.getElementById('ical-copied').classList.add('hidden');
        }

        // Close modal on backdrop click
        document.getElementById('ical-modal').addEventListener('click', function(e) {
            if (e.target === this) closeIcalModal();
        });

        function copyIcalUrl() {
            const input = document.getElementById('ical-url');
            navigator.clipboard.writeText(input.value).then(function() {
                document.getElementById('ical-copied').classList.remove('hidden');
                setTimeout(function() {
                    document.getElementById('ical-copied').classList.add('hidden');
                }, 3000);
            });
        }
    </script>
{% endblock %}
