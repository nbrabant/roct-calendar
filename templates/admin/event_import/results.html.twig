{% extends '@EasyAdmin/layout.html.twig' %}

{% block page_title %}Résultat de l'import{% endblock %}

{% block main %}
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-success">
            <div class="card-body text-center">
                <h3 class="text-success">{{ success_count }}</h3>
                <p class="mb-0">événement{{ success_count > 1 ? 's' : '' }} importé{{ success_count > 1 ? 's' : '' }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-danger">
            <div class="card-body text-center">
                <h3 class="text-danger">{{ errors|length }}</h3>
                <p class="mb-0">erreur{{ errors|length > 1 ? 's' : '' }}</p>
            </div>
        </div>
    </div>
</div>

{% if errors|length > 0 %}
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Détail des erreurs</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Ligne</th>
                            <th>Erreur</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row_number, message in errors %}
                            <tr>
                                <td>{{ row_number }}</td>
                                <td>{{ message }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endif %}

<div class="d-flex gap-2">
    <a href="{{ events_url }}" class="btn btn-primary">
        <i class="fa fa-arrow-left me-1"></i> Retour aux événements
    </a>
    <a href="{{ path('admin_event_import_upload') }}" class="btn btn-secondary">
        <i class="fa fa-file-import me-1"></i> Importer d'autres événements
    </a>
</div>
{% endblock %}
