{% extends '@EasyAdmin/layout.html.twig' %}

{% block page_title %}Import d'événements{% endblock %}

{% block main %}
<div class="row">
    <div class="col-lg-6 col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Uploader un fichier</h5>
            </div>
            <div class="card-body">
                {% for flash in app.flashes('danger') %}
                    <div class="alert alert-danger">{{ flash }}</div>
                {% endfor %}

                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" name="_token" value="{{ csrf_token('event_import_upload') }}">

                    <div class="mb-3">
                        <label for="import_season" class="form-label">Saison <span class="text-danger">*</span></label>
                        <select class="form-select" id="import_season" name="season_id" required>
                            <option value="">-- Sélectionner une saison --</option>
                            {% for season in seasons %}
                                <option value="{{ season.id }}">{{ season }}</option>
                            {% endfor %}
                        </select>
                        <div class="form-text">Tous les événements importés seront associés à cette saison.</div>
                    </div>

                    <div class="mb-3">
                        <label for="import_file" class="form-label">Fichier CSV ou XLSX <span class="text-danger">*</span></label>
                        <input type="file" class="form-control" id="import_file" name="import_file" accept=".csv,.xlsx" required>
                        <div class="form-text">Formats acceptés : CSV, XLSX. La première ligne doit contenir les en-têtes.</div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="replace_import" name="replace_import" value="1">
                        <label class="form-check-label" for="replace_import">
                            Remplacer les événements existants
                        </label>
                        <div class="form-text">Si coché, tous les événements de la saison sélectionnée seront supprimés avant l'import.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-upload me-1"></i> Uploader
                        </button>
                        <a href="{{ events_url }}" class="btn btn-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
